        <activity android:name=".SearchActivity" />
        <activity android:name=".helper.WebView" />
        <activity
            android:name=".TampilanAwal"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" />
        <activity android:name=".MainActivity" />
        <activity android:name=".PengumumanActivity" />
        <activity android:name=".user.ResetPassword" />
        <activity android:name=".user.InformasiAkunActivity" />
        <activity android:name=".user.ProfileUser" />
    </application>

</manifest>