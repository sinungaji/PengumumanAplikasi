        android:networkSecurityConfig="@xml/permission_internet"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".berkas.BerkasDefault"></activity>
        <activity android:name=".berkas.BerkasTypeFileVideo" />
