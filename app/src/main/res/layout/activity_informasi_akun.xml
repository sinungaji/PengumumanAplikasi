<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/awalconvert"
    tools:context=".user.InformasiAkunActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/gradient">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/colorWhite" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_toEndOf="@+id/imgBack"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:text="Informasi Akun"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="@color/transparanHitam"
                app:cardCornerRadius="10dp"
                app:cardElevation="@dimen/fab_margin"
                app:cardMaxElevation="@dimen/fab_margin"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/fab_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="bottom|start"
                        android:text="Data Diri"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="bottom|start"
                        android:text="Nama Anggota"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite2"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/namaAnggotaET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:inputType="text"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorTeks2"
                        android:textColorHint="@color/colorAbu"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="bottom|start"
                        android:text="Jenis Kelamin"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite2"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/jenisKelaminET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:inputType="text"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorTeks2"
                        android:textColorHint="@color/colorAbu"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="bottom|start"
                        android:text="Tempat Lahir"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite2"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/tempatLahirET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-light"
                        android:inputType="text"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorTeks2"
                        android:textColorHint="@color/colorAbu"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="bottom|start"
                        android:text="Tanggal Lahir"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite2"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/tanggalLahirET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:inputType="date"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorTeks2"
                        android:textColorHint="@color/colorAbu"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="bottom|start"
                        android:text="NIK"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite2"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/nikET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:inputType="number"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorTeks2"
                        android:textColorHint="@color/colorAbu"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="bottom|start"
                        android:text="Alamat KTP"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite2"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/alamatKtpET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:inputType="text"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorTeks2"
                        android:textColorHint="@color/colorAbu"
                        android:textSize="15dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="bottom|start"
                        android:text="Alamat Sekarang"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite2"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/alamatSekarangET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:inputType="text"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorTeks2"
                        android:textColorHint="@color/colorAbu"
                        android:textSize="15dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="0dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="bottom|start"
                        android:text="Email"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite2"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/emailET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorTeks2"
                        android:textColorHint="@color/colorAbu"
                        android:textSize="15dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="bottom|start"
                        android:text="NPWP"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite2"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/npwpET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:inputType="number"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorTeks2"
                        android:textColorHint="@color/colorAbu"
                        android:textSize="15dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="bottom|start"
                        android:text="No. WhatsApp"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite2"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/nomorWaET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:inputType="number"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorTeks2"
                        android:textColorHint="@color/colorAbu"
                        android:textSize="15dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="bottom|start"
                        android:text="No. Telepon"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite2"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/nomorTelpET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:inputType="number"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorTeks2"
                        android:textColorHint="@color/colorAbu"
                        android:textSize="15dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="bottom|start"
                        android:text="Golongan Darah"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite2"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/golDarahET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:inputType="text"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorTeks2"
                        android:textColorHint="@color/colorAbu"
                        android:textSize="15dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="bottom|start"
                        android:text="Pendidikan Terakhir"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite2"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/pendidikanTerakhirET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:inputType="text"
                        android:textColor="@color/colorTeks2"
                        android:textColorHint="@color/colorAbu"
                        android:textSize="15dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="bottom|start"
                        android:text="Tanggal Masuk Kerja"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite2"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/tanggalMasukKerjaET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:inputType="date"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorTeks2"
                        android:textColorHint="@color/colorAbu"
                        android:textSize="15dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="bottom|start"
                        android:text="Status Pernikahan"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite2"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/statusPernikahanET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:inputType="text"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorTeks2"
                        android:textColorHint="@color/colorAbu"
                        android:textSize="14dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="bottom|start"
                        android:text="Status Kepegawaian"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite2"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/statusKepegawaianET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:inputType="text"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorTeks2"
                        android:textColorHint="@color/colorAbu"
                        android:textSize="15dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="bottom|start"
                        android:text="Jenjang"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite2"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/jenjangET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:inputType="text"
                        android:paddingBottom="20dp"
                        android:textColor="@color/colorTeks2"
                        android:textColorHint="@color/colorAbu"
                        android:textSize="15dp"
                        android:textStyle="normal" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>