<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/awalconvert"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/gradient">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/colorWhite" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_toEndOf="@+id/imgBack"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:text="Pengumuman"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/transparanHitam"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/fab_margin"
            app:cardMaxElevation="@dimen/fab_margin"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/fab_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="bottom|start"
                    android:text="Detail Pengumuman"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="bottom|start"
                    android:text="Judul Pengumuman"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/inputJudulPengumuman"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/colorWhite2"
                    android:fontFamily="sans-serif-light"
                    android:inputType="text"
                    android:outlineSpotShadowColor="@color/colorWhite2"
                    android:paddingBottom="20dp"
                    android:shadowColor="@color/colorWhite2"
                    android:textColor="@color/colorTeks2"
                    android:textColorHint="@color/colorAbu"
                    android:textSize="15dp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="bottom|start"
                    android:text="Isi Pengumuman"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/inputisipengumuman"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/colorWhite2"
                    android:fontFamily="sans-serif-light"
                    android:inputType="text"
                    android:paddingBottom="20dp"
                    android:textColor="@color/colorTeks2"
                    android:textColorHint="@color/colorTeks2"
                    android:textSize="15dp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="bottom|start"
                    android:text="Tanggal Tayang Pengumuman"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/inputtgltayangpengumuman"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/colorWhite2"
                    android:fontFamily="sans-serif-light"
                    android:inputType="text"
                    android:paddingBottom="20dp"
                    android:textColor="@color/colorTeks2"
                    android:textColorHint="@color/colorAbu"
                    android:textSize="15dp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="bottom|start"
                    android:text="Tanggal Berakhir Pengumuman"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/inputtglberakhirpengumuman"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/colorWhite2"
                    android:fontFamily="sans-serif-light"
                    android:inputType="text"
                    android:paddingBottom="20dp"
                    android:textColor="@color/colorTeks2"
                    android:textColorHint="@color/colorAbu"
                    android:textSize="15dp"
                    android:textStyle="normal" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/transparanHitam"
            app:cardCornerRadius="10dp"
            app:cardElevation="@dimen/fab_margin"
            app:cardMaxElevation="@dimen/fab_margin"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/fab_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="bottom|start"
                        android:text="Berkas Pengumuman"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycleView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/activity_berkas_pengumuman">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>