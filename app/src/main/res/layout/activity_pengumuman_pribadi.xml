<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@null"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cvPengumumanPribadi">

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/tumbnailPribadi"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/judulpengumumanPribadiTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Pengumuman"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/isipengumumanPribadiTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isi Pengumuman"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorTeks2"
            android:textSize="15sp"
            android:maxLines="3"
            android:textAlignment="textStart"/>

        <TextView
            android:id="@+id/tgltayangpengumumanPribadiTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorTeks2"
            android:textSize="9sp"
            android:textAlignment="textStart"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>